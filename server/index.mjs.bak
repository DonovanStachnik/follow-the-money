import express from "express";
import { execFile } from "node:child_process";
import { promisify } from "node:util";
import path from "node:path";
import { fileURLToPath } from "node:url";

const __filename = fileURLToPath(import.meta.url);
const __dirname  = path.dirname(__filename);
console.log("[HeatSeeker] using index.mjs at", __filename);

const execFileAsync = promisify(execFile);
const app = express();

function fridays(n=6) {
  const out = [];
  const d = new Date();
  for (let i=0; i<90 && out.length<n; i++) {
    const dt = new Date(d); dt.setDate(dt.getDate()+i);
    if (dt.getDay() === 5) {
      const y = dt.getUTCFullYear();
      const m = String(dt.getUTCMonth()+1).padStart(2,"0");
      const day = String(dt.getUTCDate()).padStart(2,"0");
      out.push(`${y}-${m}-${day}`);
    }
  }
  return out;
}

app.get("/api/health", (req,res) => {
  res.json({ ok: true, python: process.env.PYTHON || "python", port: 3000, index: __filename });
});

app.get("/api/search", async (req,res) => {
  const sym = String(req.query.ticker || "").toUpperCase();
  if (!sym) return res.status(400).json({ error: "ticker required" });
  res.json({ quote: { symbol: sym, regularMarketPrice: 0, longName: sym }, expirations: fridays(20) });
});

app.get("/api/grid", async (req,res) => {
  try {
    const sym   = String(req.query.ticker || "").toUpperCase();
    const limit = Math.max(1, Math.min(6, parseInt(req.query.limit || "3", 10)));
    if (!sym) return res.status(400).json({ error: "ticker required" });

    const py = process.env.PYTHON || "python";
    const script = path.join(__dirname, "yf_chain.py");
    const { stdout } = await execFileAsync(py, [script, sym, String(limit)], { timeout: 25000 });

    res.setHeader("Content-Type", "application/json");
    res.send(stdout);
  } catch (e) {
    res.status(500).json({ error: String(e.message || e) });
  }
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, "0.0.0.0", () => {
  console.log("[HeatSeeker] API up on http://localhost:" + PORT);
});
